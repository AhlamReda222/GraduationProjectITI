@model IEnumerable<GraduationProjectITI.Models.Product>

@{
    ViewBag.Title = "All Products";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: #f0f2f5;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.03);
        }

    .btn-custom {
        border-radius: 20px;
        padding: 6px 16px;
        color: #fff;
    }

    .btn-add {
        background-color: #28a745;
    }

    .btn-details {
        background-color: #0d6efd;
    }

    .btn-edit {
        background-color: #ffc107;
        color: #000;
    }

    .btn-delete {
        background-color: #dc3545;
    }

    .product-img {
        object-fit: cover;
        height: 180px;
        border-radius: 10px;
    }

    .product-card {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .btn-group .btn {
        margin-right: 5px;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">📦 Product Catalog</h2>
        <a asp-action="Create" asp-controller="Product" class="btn btn-add btn-custom">+ Add Product</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <img src="@item.ImagePath" class="card-img-top product-img" alt="Product Image" />

                    <div class="card-body">
                        <h5 class="card-title text-primary">@item.Description</h5>
                        <p class="card-text">
                            <strong>Price:</strong> @item.Price.ToString("C") <br />
                            <strong>Quantity:</strong> @item.Quantity <br />
                            <strong>Category:</strong> @item.category?.Name
                        </p>

                        <div class="btn-group">
                            <a asp-action="Details" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-details btn-sm btn-custom">
                                Details
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-edit btn-sm btn-custom">
                                Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-delete btn-sm btn-custom">
                                Delete
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
