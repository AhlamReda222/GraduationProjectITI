@model GraduationProjectITI.Models.Product

@{
    ViewBag.Title = "Edit Product";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="mb-4 text-primary">✏️ Edit Product</h2>

        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProductId" />

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" asp-items="ViewBag.category" class="form-select"></select>
            </div>

            <div class="mb-3">
                <label class="form-label">Current Image</label><br />
                <img src="@Model.ImagePath" width="150" class="rounded mb-2" />
            </div>

            <div class="mb-3">
                <label for="ImageFile" class="form-label">Upload New Image</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success me-2">💾 Save</button>
            <a asp-action="Index" class="btn btn-secondary">↩ Back</a>
        </form>
    </div>
</div>
