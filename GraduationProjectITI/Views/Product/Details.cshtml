@model GraduationProjectITI.Models.Product

@{
    ViewBag.Title = "Product Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(to right, #ece9e6, #ffffff);
        font-family: 'Segoe UI', sans-serif;
    }

    .product-details-card {
        border-radius: 20px;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
        padding: 40px;
        background-color: #ffffff;
        transition: all 0.3s ease-in-out;
    }

        .product-details-card:hover {
            transform: translateY(-3px);
        }

    .product-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 15px;
        border: 2px solid #dee2e6;
    }

    .back-button {
        border-radius: 25px;
        padding: 10px 25px;
        font-weight: 500;
    }

    .detail-title {
        color: #0d6efd;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .detail-text {
        font-size: 1.1rem;
        color: #495057;
        margin-bottom: 12px;
    }

    .tag {
        display: inline-block;
        padding: 4px 12px;
        background-color: #e0f7fa;
        color: #007b8a;
        font-weight: 600;
        border-radius: 15px;
        font-size: 0.9rem;
    }
</style>

<div class="container mt-5">
    <div class="product-details-card">
        <div class="row">
            <div class="col-md-5">
                <img src="@Model.ImagePath" class="product-image" alt="Product Image" />
            </div>

            <div class="col-md-7">
                <h2 class="detail-title">🛍️ @Model.Description</h2>

                <p class="detail-text"><strong>Price:</strong> <span class="tag">@Model.Price.ToString("C")</span></p>
                <p class="detail-text"><strong>Quantity:</strong> <span class="tag">@Model.Quantity</span></p>
                <p class="detail-text"><strong>Category:</strong> <span class="tag">@Model.category?.Name</span></p>
                <p class="detail-text"><strong>Description:</strong><br /> @Model.Description</p>

                <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary back-button mt-4">← Back to Products</a>
            </div>
        </div>
    </div>
</div>
